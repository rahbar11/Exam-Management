<!DOCTYPE html>
<html lang="en">

<head>
  <title>Question List</title>
  <%- include('../partials/head')%>
  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">

  <!-- =======================================================
  * Template Name: NiceAdmin - v2.2.0
  * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
  * Author: BootstrapMade.com
  * License: https://bootstrapmade.com/license/
  ======================================================== -->
</head>

<body>

  <!-- ======= Header ======= -->
  <%- include('../partials/navbar', {user}) %>

  <!-- ======= Sidebar ======= -->
  <%- include('../partials/sidebar')%>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Question List</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Questions</li>
          <li class="breadcrumb-item active">Question List</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Question List</h5>

              <form class="needs-validation" method="post" novalidate>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Exam Name</label>
                    <div class="col-sm-8">
                        <select id="inputState" class="form-select" name="examid" required>
                            <option value="all">View All</option>
                            <% exams.forEach((exam, index) => { %>
                                <option value="<%= exam._id %>"><%= exam.name %></option>
                            <% }) %>
                        </select>
                        <div class="invalid-feedback">Please select the exam!</div>
                    </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">Submit Button</label>
                  <div class="col-sm-8">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->
              
              <!-- Table with stripped rows -->
              <table class="table table-hover datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Question</th>
                    <th scope="col">Options</th>
                    <th scope="col">Correct</th>
                    <th scope="col">Modify</th>
                  </tr>
                </thead>
                <tbody>
                  <% questions.forEach((question, index) => { %>
                    <tr class="odd">
                      <th class="align-middle" scope="row"> <%= index + 1 %> </th>
                      <td class="align-middle" > <%= question.question %> </td>
                      <td class="align-middle" > <%= question.options.join(", ") %> </td>
                      <td class="align-middle" > <%= question.correct %> </td>
                      <td class="align-middle" > 
                        <a class="btn btn-primary" href="/questions/<%= question._id %>">Edit</a>
                        <a class="btn btn-danger" href="/questions/del/<%= question._id %>">Delete</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <%- include('../partials/footer')%>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <%- include('../partials/script')%>

</body>

</html>