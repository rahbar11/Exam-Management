<!DOCTYPE html>
<html lang="en">

<head>
  <title>Exam List</title>
  <%- include('../partials/head')%>
  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">

  <!-- =======================================================
  * Template Name: NiceAdmin - v2.2.0
  * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
  * Author: BootstrapMade.com
  * License: https://bootstrapmade.com/license/
  ======================================================== -->
</head>

<body>

  <!-- ======= Header ======= -->
  <%- include('../partials/navbar', {user}) %>

  <!-- ======= Sidebar ======= -->
  <%- include('../partials/sidebar')%>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Exam List</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Exams</li>
          <li class="breadcrumb-item active">Exam List</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Exam List</h5>
              
              <!-- Table with stripped rows -->
              <table class="table table-hover datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Questions</th>
                    <th scope="col">Modify</th>
                  </tr>
                </thead>
                <tbody>
                  <% exams.forEach((exam, index) => { %>
                    <tr class="odd">
                      <th class="align-middle" scope="row"> <%= index + 1 %> </th>
                      <td class="align-middle" > <img style="height: 50px; width: 50px; border-radius: 100rem; object-fit: cover;" src="Exam Images/<%= exam.image %>"> </td>
                      <td class="align-middle" > <%= exam.name %> </td>
                      <td class="align-middle" > <%= exam.questions %> </td>
                      <td class="align-middle" > 
                        <a class="btn btn-primary" href="/exams/<%= exam._id %>">Edit</a>
                        <a class="btn btn-danger" href="/exams/del/<%= exam._id %>">Delete</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <%- include('../partials/footer')%>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <%- include('../partials/script')%>

</body>

</html>